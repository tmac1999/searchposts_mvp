<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_jumptolist"
        android:layout_width="260dp"
        android:background="#77DDFF66"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_iconjump"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iconjump_selector" />

        <TextView
            android:id="@+id/tv_jumptolist"
           android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="贴吧数据表"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="260dp"
        android:background="#77DDCC66"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/about_selector" />

        <TextView
            android:id="@+id/tv_about"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="关于(操作详解)"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="260dp"
        android:background="#77DDCC66"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/about_selector" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="260dp"
        android:background="#77DDCC66"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/about_selector" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>